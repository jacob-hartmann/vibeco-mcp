# pnpm security hardening
engine-strict=true
auto-install-peers=true
strict-peer-dependencies=false

# Allow lifecycle scripts (required for build tooling)
# Set to true to prevent lifecycle script attacks in untrusted packages
ignore-scripts=false
script-shell=

# Audit settings
audit=true
audit-level=moderate

# Lockfile integrity
frozen-lockfile=false
prefer-frozen-lockfile=true

# Avoid publishing accidents
git-checks=true
